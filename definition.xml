<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Element Status Chart">
		<Require feature="dynamic-height" />
	</ModulePrefs>
	<Content type="html">
<![CDATA[ 

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
		<title>Current Element Status</title>
		<link href="__UPTIME_GADGET_BASE__/elementStatus.css" type="text/css" rel="stylesheet" />

		#includeResources(jquery,jqueryui,highcharts)
		
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/apiQueries.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeElementStatusBarChart.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeElementStatusPieChart.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/elementStatus.js"></script>
		
	</head>



	<body>

		<div id="widgetSettings">
			Select Element:
			<form id="widgetOptions">
				<div id="availableElements">
					<select id="elementId" class="element-status-setting">
						<option value="-1">Loading...</option>
					</select>
				</div>
				<br/>
				Display As:
				<br/>
				<input type="radio" checked id="pie" class="element-status-setting" name="chartType" value="pie"> Pie Chart
				<br/>
				<input type="radio" id="bar" class="element-status-setting" name="chartType" value="bar"> Horizontal Bar Chart
				<br/>
				<input type="radio" id="column" class="element-status-setting" name="chartType" value="column"> Vertical Bar Chart
				<br/>
				<br/>
					<label for="refreshRate">Refresh Rate:</label>
					<select id="refreshRate" class="element-status-setting" name="refreshRate">
						<option value="30">30s</option>
						<option value="60">1m</option>
						<option value="300">5m</option>
						<option value="600">10m</option>
						<option value="900">15m</option>
						<option value="3600">1h</option>
						<option value="-1">Never</option>
					</select>
				<br/><br/>
				<input id="closeSettings" type="button" value="Close"/>
			</form>
		</div>

		<div id = "widgetChart"></div>
		<div id="statusBar"></div>


	</body>
</html>

]]>
	</Content>
</Module>
