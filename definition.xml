<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Element Status Panel">
		<Require feature="dynamic-height" />
	</ModulePrefs>
	<Content type="html">
<![CDATA[ 

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
		<title>Current Status</title>
		<link href="/styles/uptime.css" type="text/css" rel="stylesheet" />
		<link href="__UPTIME_GADGET_BASE__/elementStatus.css" type="text/css" rel="stylesheet" />

		#includeResources()
		
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeApi.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/elementStatus.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeElementStatusBarChart.js"></script>
		<script type="text/javascript" src="__UPTIME_GADGET_BASE__/uptimeElementStatusPieChart.js"></script>
		
	</head>



	<body>

		<div id="widgetSettings">
			Select Element:
			<form id="widgetOptions">
				<div id="availableElements"></div>
				<br/>
				Display As:
				<br/>
				<input type="radio" checked id="pie" name="chartType" value="pie"> Pie Chart
				<br/>
				<input type="radio" id="bar" name="chartType" value="bar"> Horizontal Bar Chart
				<br/>
				<input type="radio" id="column" name="chartType" value="column"> Vertical Bar Chart
				<br/>
				<br/>
				<input type="checkbox" checked id="showLegend" name="showLegend" value="showLegend"> Display Legend
				<br/>
				<br/>
				Refresh Rate:
				<input type="text" checked id="refreshRate" name="refreshRate" value="15"> seconds
				<br/><br/>
				<input id="saveSettings" type="button" value="Save"/>
				<input id="cancelSettings" type="button" value="Cancel"/>
			</form>
			<br/><span style="float:right">v1.0</span><br/>
		</div>

		<div id = "widgetChart" style="border:1px solid;"></div>
		<div id="lastRefreshBar" style="display:none; width:100%; font-weight:bold;font-size:larger; ">Last Refresh: none yet</div>
		<div id="statusBar" style="display:none; width:100%; font-weight:bold;font-size:larger; ">Backend Call Status</div>


	</body>
</html>

]]>
	</Content>
</Module>
